<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.loginActivity"
    android:orientation="vertical"
    android:paddingRight="15dp"
    android:paddingLeft="15dp"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/shopping_bag_cart_svgrepo_com"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="City Shop"
            android:textColor="#FF7043"
            android:textStyle="bold"
            android:textSize="40sp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login and Explore"
        android:textColor="#000"
        android:textSize="30dp"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_gravity="start"
        />

    <EditText
        android:id="@+id/userNameLA"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Username"
        android:paddingLeft="10dp"
        android:inputType="textEmailAddress"
        android:layout_marginTop="20dp"
        android:textColorHint="#CE000000"
        android:background="@drawable/edt_text_background"

        />

    <EditText
        android:id="@+id/userPasswordLA"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Password"
        android:paddingLeft="10dp"
        android:layout_marginTop="20dp"
        android:textColorHint="#CE000000"
        android:background="@drawable/edt_text_background"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:textSize="25sp"
        android:layout_marginTop="5dp"
        android:layout_gravity="start"
        android:textColor="#C4000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonRegisterLA"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Register"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:layout_weight="1"
            android:background="@drawable/login_btn_blank"
            android:layout_marginRight="10dp"

            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonLoginLA"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Login"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:textColor="#fff"
            android:layout_weight="1"
            android:background="@drawable/login_fill_button"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:layout_weight="1"
            android:src="@drawable/line1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="With"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:layout_weight="1"
            android:src="@drawable/line1"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"

        >
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/facebook_color_svgrepo_com__1_"
            android:layout_marginRight="20dp"
            app:backgroundTint="#DECFF8"
            />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/google"
            app:backgroundTint="#DECFF8"
            android:layout_marginRight="20dp"

            />
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/insta"
            app:backgroundTint="#DECFF8"
            android:layout_marginRight="20dp"

            />
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/apple"
            app:backgroundTint="#DECFF8"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:textSize="20dp"

            />

        <TextView
            android:id="@+id/buttonLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textColor="#9330F6"
            android:textSize="20dp"
            android:textStyle="bold"

            />
    </LinearLayout>
    </LinearLayout>
